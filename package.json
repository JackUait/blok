{
  "name": "@jackuait/blok",
  "version": "0.6.0-beta.8",
  "description": "Blok â€” headless, highly extensible rich text editor built for developers who need to implement a block-based editing experience (similar to Notion) without building it from scratch",
  "module": "dist/blok.mjs",
  "types": "./types/index.d.ts",
  "typesVersions": {
    "*": {
      "tools": [
        "./types/tools-entry.d.ts"
      ],
      "full": [
        "./types/full.d.ts"
      ],
      "locales": [
        "./types/locales.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/blok.mjs"
    },
    "./tools": {
      "types": "./types/tools-entry.d.ts",
      "import": "./dist/tools.mjs"
    },
    "./full": {
      "types": "./types/full.d.ts",
      "import": "./dist/full.mjs"
    },
    "./locales": {
      "types": "./types/locales.d.ts",
      "import": "./dist/locales.mjs"
    }
  },
  "bin": {
    "blok": "./bin/blok.mjs",
    "migrate-from-editorjs": "./codemod/migrate-editorjs-to-blok.js"
  },
  "files": [
    "dist",
    "types",
    "src",
    "codemod",
    "bin"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "blok",
    "text editor",
    "rich text editor",
    "block-based editor",
    "notion-like editor",
    "headless editor",
    "extensible editor"
  ],
  "sideEffects": [
    "./src/components/polyfills.ts",
    "*.css"
  ],
  "scripts": {
    "serve": "vite --no-open",
    "serve:docs": "cd docs && vite --port 8080",
    "build": "vite build --mode production && node scripts/build-locales.mjs && node scripts/build-cli.mjs",
    "build:cli": "node scripts/build-cli.mjs",
    "build:test": "vite build --mode test && node scripts/build-locales.mjs test",
    "lint": "sh -c 'eslint .; ESLINT_EXIT=$?; tsc --noEmit; TSC_EXIT=$?; if [ $ESLINT_EXIT -ne 0 ] || [ $TSC_EXIT -ne 0 ]; then exit 1; fi'",
    "lint:fix": "eslint . --fix",
    "lint:tests": "eslint test/",
    "lint:types": "tsc --noEmit",
    "i18n:audit": "node scripts/i18n-audit.js",
    "i18n:check": "node scripts/i18n/check-translations.mjs",
    "typography:check": "node scripts/typography-finder/cli.mjs",
    "e2e": "yarn build:test && playwright test",
    "e2e:smoke": "yarn build:test && playwright test --project=chromium --grep=\"@smoke\"",
    "e2e:chrome": "yarn build:test && playwright test --project=chromium",
    "e2e:firefox": "yarn build:test && playwright test --project=firefox",
    "e2e:safari": "yarn build:test && playwright test --project=webkit",
    "e2e:ui": "yarn build:test && playwright test --ui",
    "e2e:ui:chrome": "yarn build:test && playwright test --ui --project=chromium",
    "e2e:ui:firefox": "yarn build:test && playwright test --ui --project=firefox",
    "e2e:ui:safari": "yarn build:test && playwright test --ui --project=webkit",
    "test": "vitest run --project=unit",
    "test:watch": "vitest --project=unit",
    "test:coverage": "vitest run --coverage --project=unit",
    "jscpd": "jscpd src/ test/",
    "jscpd:report": "jscpd . --reporters html,json --output .jscpd-report",
    "prepublishOnly": "yarn build",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006 --no-open",
    "storybook:build": "storybook build --stats-json",
    "storybook:test": "vitest --project=storybook --run",
    "chromatic": "chromatic --exit-zero-on-changes",
    "perf:analyze": "node scripts/analyze-performance.mjs",
    "perf:compare": "node scripts/analyze-performance.mjs --baseline",
    "perf:dashboard": "node scripts/generate-performance-dashboard.mjs",
    "e2e:validate-categories": "node scripts/validate-test-categories.mjs",
    "size": "size-limit",
    "size:why": "size-limit --why",
    "release": "node scripts/release.mjs",
    "release:preflight": "yarn lint && yarn test",
    "unused-css": "node scripts/unused-css-finder/cli.mjs"
  },
  "author": "JackUait",
  "contributors": [
    "CodeX (the author of initial solution)"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JackUait/blok.git"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@babel/register": "7.28.3",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@playwright/test": "1.57.0",
    "@size-limit/esbuild-why": "12.0.0",
    "@size-limit/preset-small-lib": "12.0.0",
    "@storybook/addon-a11y": "10.1.11",
    "@storybook/addon-vitest": "10.1.11",
    "@storybook/html-vite": "10.1.11",
    "@types/eslint-plugin-tailwindcss": "3",
    "@types/node": "22.19.0",
    "@vitest/browser-playwright": "4.0.14",
    "@vitest/coverage-v8": "4.0.14",
    "@vitest/ui": "4.0.14",
    "autoprefixer": "10.4.22",
    "chromatic": "13.3.4",
    "eslint": "9.39.1",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.2.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsdoc": "61.4.1",
    "eslint-plugin-playwright": "2.3.0",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-storybook": "10.1.11",
    "eslint-plugin-tailwindcss": "3.18.2",
    "eslint-plugin-testing-library": "^7.15.4",
    "eslint-plugin-vitest": "^0.5.4",
    "html-janitor": "2.0.4",
    "husky": "9.1.7",
    "jscpd": "4.0.5",
    "jsdom": "27.2.0",
    "playwright": "1.57.0",
    "postcss": "8.5.6",
    "rollup-plugin-license": "3.6.0",
    "semantic-release": "25.0.2",
    "shiki": "^3.21.0",
    "size-limit": "12.0.0",
    "storybook": "10.1.11",
    "tailwindcss": "3",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0",
    "vite": "7.2.4",
    "vite-plugin-css-injected-by-js": "3.1.0",
    "vitest": "4.0.14",
    "yaml": "^2.8.2"
  },
  "dependencies": {
    "i18next": "25.7.3",
    "nanoid": "5.1.6",
    "yjs": "13.6.28"
  },
  "size-limit": [
    {
      "name": "Minimum (core only)",
      "path": "src/variants/blok-minimum.ts",
      "limit": "300 KB"
    },
    {
      "name": "Normal (with tools)",
      "path": "src/blok.ts",
      "limit": "300 KB"
    },
    {
      "name": "Maximum (all locales)",
      "path": "src/variants/blok-maximum.ts",
      "limit": "300 KB"
    }
  ]
}
