{
  "name": "@jackuait/blok",
  "version": "0.1.1",
  "description": "Blok â€” headless, highly extensible rich text editor built for developers who need to implement a block-based editing experience (similar to Notion) without building it from scratch",
  "main": "dist/blok.umd.js",
  "module": "dist/blok.mjs",
  "types": "./types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "blok",
    "text editor",
    "rich text editor",
    "block-based editor",
    "notion-like editor",
    "headless editor",
    "extensible editor"
  ],
  "scripts": {
    "serve": "vite --no-open",
    "build": "vite build --mode production",
    "build:test": "vite build --mode test",
    "lint": "sh -c 'ESLINT_USE_FLAT_CONFIG=true eslint .; ESLINT_EXIT=$?; tsc --noEmit; TSC_EXIT=$?; if [ $ESLINT_EXIT -ne 0 ] || [ $TSC_EXIT -ne 0 ]; then exit 1; fi'",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=true eslint . --fix",
    "lint:tests": "ESLINT_USE_FLAT_CONFIG=true eslint test/",
    "lint:types": "tsc --noEmit",
    "e2e": "playwright test",
    "e2e:chrome": "playwright test --project=chromium",
    "e2e:firefox": "playwright test --project=firefox",
    "e2e:safari": "playwright test --project=webkit",
    "e2e:ui": "playwright test --ui",
    "e2e:ui:chrome": "playwright test --ui --project=chromium",
    "e2e:ui:firefox": "playwright test --ui --project=firefox",
    "e2e:ui:safari": "playwright test --ui --project=webkit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "jscpd": "jscpd src/ test/",
    "jscpd:report": "jscpd . --reporters html,json --output .jscpd-report",
    "prepublishOnly": "yarn build"
  },
  "author": "CodeX",
  "contributors": [
    "JackUait"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JackUait/editor.js.git"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@babel/register": "7.28.3",
    "@codexteam/icons": "0.3.3",
    "@codexteam/shortcuts": "1.2.0",
    "@editorjs/code": "2.9.3",
    "@editorjs/delimiter": "1.4.2",
    "@editorjs/header": "2.8.8",
    "@editorjs/paragraph": "2.11.7",
    "@editorjs/simple-image": "1.6.0",
    "@eslint/eslintrc": "3.3.1",
    "@playwright/test": "1.57.0",
    "@types/node": "22.19.0",
    "@types/sortablejs": "^1.15.9",
    "@typescript-eslint/eslint-plugin": "8.48.0",
    "@typescript-eslint/parser": "8.48.0",
    "@vitest/coverage-v8": "4.0.14",
    "eslint": "^8.57.0",
    "eslint-plugin-deprecation": "3.0.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.2.1",
    "eslint-plugin-jsdoc": "48.0.0",
    "eslint-plugin-playwright": "2.3.0",
    "eslint-plugin-sonarjs": "3.0.5",
    "html-janitor": "2.0.4",
    "jscpd": "4.0.5",
    "jsdom": "23.0.0",
    "nanoid": "4.0.2",
    "postcss-apply": "0.12.0",
    "postcss-nested": "4.1.2",
    "postcss-preset-env": "8.3.0",
    "rollup-plugin-license": "3.0.1",
    "stylelint": "15.4.0",
    "tslint": "6.1.1",
    "typescript": "5.0.3",
    "vite": "4.2.1",
    "vite-plugin-css-injected-by-js": "3.1.0",
    "vitest": "4.0.14",
    "yaml": "^2.8.1"
  },
  "dependencies": {
    "@editorjs/caret": "1.0.3",
    "@types/lodash": "4.17.21",
    "lodash": "4.17.21",
    "sortablejs": "^1.15.6"
  },
  "resolutions": {
    "@typescript-eslint/eslint-plugin": "6.0.0",
    "@typescript-eslint/parser": "6.0.0",
    "@typescript-eslint/typescript-estree": "6.0.0",
    "@typescript-eslint/scope-manager": "6.0.0",
    "@typescript-eslint/types": "6.0.0",
    "@typescript-eslint/utils": "6.0.0",
    "@typescript-eslint/visitor-keys": "6.0.0",
    "@typescript-eslint/type-utils": "6.0.0",
    "eslint-plugin-jsdoc": "48.0.0"
  }
}
