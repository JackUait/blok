{
  "name": "@jackuait/blok",
  "version": "0.4.1-beta.5",
  "description": "Blok â€” headless, highly extensible rich text editor built for developers who need to implement a block-based editing experience (similar to Notion) without building it from scratch",
  "main": "dist/blok.umd.js",
  "module": "dist/blok.mjs",
  "types": "./types/index.d.ts",
  "bin": {
    "migrate-from-editorjs": "./codemod/migrate-editorjs-to-blok.js"
  },
  "files": [
    "dist",
    "types",
    "codemod"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "blok",
    "text editor",
    "rich text editor",
    "block-based editor",
    "notion-like editor",
    "headless editor",
    "extensible editor"
  ],
  "scripts": {
    "serve": "vite --no-open",
    "build": "vite build --mode production",
    "build:test": "vite build --mode test",
    "lint": "sh -c 'eslint .; ESLINT_EXIT=$?; tsc --noEmit; TSC_EXIT=$?; if [ $ESLINT_EXIT -ne 0 ] || [ $TSC_EXIT -ne 0 ]; then exit 1; fi'",
    "lint:fix": "eslint . --fix",
    "lint:tests": "eslint test/",
    "lint:types": "tsc --noEmit",
    "e2e": "playwright test",
    "e2e:chrome": "playwright test --project=chromium",
    "e2e:firefox": "playwright test --project=firefox",
    "e2e:safari": "playwright test --project=webkit",
    "e2e:ui": "playwright test --ui",
    "e2e:ui:chrome": "playwright test --ui --project=chromium",
    "e2e:ui:firefox": "playwright test --ui --project=firefox",
    "e2e:ui:safari": "playwright test --ui --project=webkit",
    "test": "vitest run --project=unit",
    "test:watch": "vitest --project=unit",
    "test:coverage": "vitest run --coverage --project=unit",
    "jscpd": "jscpd src/ test/",
    "jscpd:report": "jscpd . --reporters html,json --output .jscpd-report",
    "prepublishOnly": "yarn build",
    "prepare": "husky",
    "release": "./scripts/release.sh release",
    "release:alpha": "./scripts/release.sh prerelease alpha",
    "release:rc": "./scripts/release.sh prerelease rc",
    "release:dry": "./scripts/release.sh release beta true",
    "storybook": "storybook dev -p 6006 --no-open",
    "storybook:build": "storybook build --stats-json",
    "storybook:test": "vitest --project=storybook --run",
    "chromatic": "chromatic --exit-zero-on-changes",
    "release:beta": "npm version prerelease --preid=beta",
    "publish:beta": "npm publish --tag beta"
  },
  "author": "JackUait",
  "contributors": [
    "CodeX (the author of initial solution)"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JackUait/blok.git"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@babel/register": "7.28.3",
    "@chromatic-com/storybook": "4.1.3",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@playwright/test": "1.57.0",
    "@storybook/addon-a11y": "10.1.1",
    "@storybook/addon-vitest": "10.1.1",
    "@storybook/global": "5.0.0",
    "@storybook/html-vite": "10.1.1",
    "@types/eslint-plugin-tailwindcss": "3",
    "@types/node": "22.19.0",
    "@vitest/browser-playwright": "4.0.14",
    "@vitest/coverage-v8": "4.0.14",
    "@vitest/ui": "4.0.14",
    "autoprefixer": "10.4.22",
    "chromatic": "13.3.4",
    "eslint": "9.39.1",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.2.1",
    "eslint-plugin-jsdoc": "61.4.1",
    "eslint-plugin-playwright": "2.3.0",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-storybook": "10.1.1",
    "eslint-plugin-tailwindcss": "3.18.2",
    "html-janitor": "2.0.4",
    "husky": "^9.1.7",
    "jscpd": "4.0.5",
    "jsdom": "27.2.0",
    "nanoid": "5.1.6",
    "playwright": "1.57.0",
    "postcss": "8.5.6",
    "rollup-plugin-license": "3.6.0",
    "storybook": "10.1.1",
    "tailwindcss": "3",
    "tslint": "6.1.3",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0",
    "vite": "7.2.4",
    "vite-plugin-css-injected-by-js": "3.1.0",
    "vitest": "4.0.14",
    "yaml": "2.8.1"
  },
  "dependencies": {
    "@types/lodash": "4.17.21",
    "lodash": "4.17.21",
    "tailwind-merge": "3.4.0"
  }
}
